/// PROGRAM TO CHECK EVEN OR ODD 

#include<iostream>

using namespace std;

int main(){
    
    int number;
    cout<<"ENTER  THE NUMBER ";
    cin>> number;
    
    if(number%2==0){
        cout<<number<<" \t is EVEN number ";
    }
    else
    {
        
        cout<<number <<" \t is ODD number";
    }
    
}